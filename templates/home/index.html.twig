{% extends 'base.html.twig' %}

{% block title %}Page d'accueil{% endblock %}

{% block body %}

    <div class="items-center">
        <h1>Bienvenue dans le gestionnaire de votre bibliothèque ! Cliquez sur le titre d'un livre pour le visualiser.</h1>
        <br><br>
        <h2 class="font-bold">Voici la liste des livres existants :</h2>
        <table>
            <thead>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Disponibilité</th>
            </thead>
            <tbody>
                {% for book in books %}
                    <tr>
                        <td><a href="{{ path('book.show', { 'id': book.id }) }}">{{ book.title }}</a></td>
                        <td>{{ book.author }}</td>
                        <td>{{ book.availability()|raw }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
