{% extends 'base.html.twig' %}

{% block title %}Subscriber{% endblock %}

{% block body %}
<div class="mt-5 flex flex-col items-center w-auto h-auto">

        <div class=" flex flex-col gap-2 w-100">

            <div class="">
                <h1 class="font-bold text-3xl">{{ subscriber.fullname }}</h1>
            </div>

            <div class="w-auto h-px bg-gray-300"></div>
            
            <div class="flex gap-2 justify-center">

                <div class="flex flex-col flex-1">
                    <span class="font-bold text-left text-gray-600">Prénom : </span>
                    {{ subscriber.firstname }}
                </div>

                <div class="h-auto w-px bg-gray-300"></div>

                <div class="flex flex-col flex-1">
                    <span class="font-bold text-left text-gray-600">Nom : </span>
                    {{ subscriber.lastname }}
                </div>

            </div>

            <div class="w-auto h-px bg-gray-300"></div>

            <div class="flex flex-col">
                <span class="font-bold text-left text-gray-600">EMail : </span>
                <p>{{ subscriber.email }}</p>
            </div>

            <div class="flex place-content-between">
                <div class="flex mt-4 gap-4">
                    <a href="{{ path('app_subscriber_edit', { 'id': subscriber.id }) }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-2 rounded hover:cursor-pointer">Modifier</a>
                    <a href="{{ path('app_subscriber_index') }}" class="bg-white hover:bg-blue-700 text-blue-500 font-bold py-1 px-2 rounded hover:cursor-pointer hover:text-white border border-blue-500">Retour à la liste</a>
                </div>
                <div class="flex mt-4">
                    <a href="{{ path('app_subscriber_delete', { 'id': subscriber.id }) }}" class="text-white bg-red-500 hover:bg-red-700 font-bold py-1 px-2 rounded hover:cursor-pointer">Supprimer</a>
                </div>
            </div>

        </div>

    </div>
{% endblock %}
