{% extends 'base.html.twig' %}

{% block title %}Subscriber index{% endblock %}

{% block body %}
    <h1>Subscriber index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for subscriber in subscribers %}
            <tr>
                <td>{{ subscriber.id }}</td>
                <td>{{ subscriber.firstname }}</td>
                <td>{{ subscriber.lastname }}</td>
                <td>{{ subscriber.email }}</td>
                <td>
                    <a href="{{ path('app_subscriber_show', {'id': subscriber.id}) }}">show</a>
                    <a href="{{ path('app_subscriber_edit', {'id': subscriber.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_subscriber_new') }}">Create new</a>
{% endblock %}
